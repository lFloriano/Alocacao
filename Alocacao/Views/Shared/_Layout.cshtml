                <h5 style="margin: 0px;"><i class="icon fa fa-warning"></i>@TempData.Peek("AddMessageError").ToString()</h5>
            </div>
        }

        @if (TempData["AddMessageSuccess"] != null)
        {
            <div class="alert alert-success alert-dismissible">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                <h5 style="margin: 0px;"><i class="icon fa fa-check"></i>@TempData.Peek("AddMessageSuccess").ToString()</h5>
            </div>
        }

        @RenderBody()

    </section>

  </div>

  <footer class="main-footer">
    <div class="pull-right hidden-xs">
      Tudo o que você quiser!
    </div>
    <strong>Copyright &copy; 2019 <a href="#">ABC Projetos</a>.</strong>
  </footer>

  <div class="control-sidebar-bg"></div>
</div>
