<script>
    function ToggleFiltro(obj) {
        var targetObject = document.getElementById(obj.getAttribute("data-toggle"));

        if (targetObject.style.display == "none") {
            targetObject.style.display = "";
        }
        else {
            targetObject.style.display = "none";
        }
    }

    function ToggleAll(obj) {
        var table = document.getElementById(obj).getElementsByTagName("tbody")[0];
        var boxesTodos = table.querySelectorAll("input[type=checkbox]");
        var boxesMarcados = table.querySelectorAll("input:checked");

        //marcados <= total? marca todos. Else desmarca todos
        console.log('marcados ' + String(boxesMarcados.length));
        console.log('todos ' + String(boxesTodos.length));

        if (boxesMarcados.length < boxesTodos.length) {
            $(boxesTodos).each(function () {
                this.checked = true;
            });
        }
        else {
            $(boxesTodos).each(function () {
                this.checked = false;
            });
        }
    }
</script>


